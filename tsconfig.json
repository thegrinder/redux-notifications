{
    "include": ["./src/**/*"],
    "exclude": [
      "node_modules",
      "./src/**/__tests__/**/*",
    ],
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist",
      "target": "ES2019",
      "module": "commonjs",
      "lib": ["dom"],
      "strict": true,
      "sourceMap": true,
      "jsx": "react",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "downlevelIteration": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true
    }
  }